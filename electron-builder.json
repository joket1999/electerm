{
  "appId": "org.heduo.heduo",
  "directories": {
    "app": "work/app",
    "output": "dist"
  },
  "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
  "win": {
    "target": ["tar.gz"],
    "icon": "app/build/icons.ico"
  },
  "mac": {
    "category": "public.app-category.developer-tools",
    "target": ["dmg"],
    "icon": "app/build/icons.icns"
  },
  "dmg": {
    "contents": [
      {
        "x": 110,
        "y": 150
      },
      {
        "x": 240,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "category": "Development",
    "icon": "app/imgs",
    "target": [
      "rpm",
      "deb",
      "tar.gz"
    ]
  }
}